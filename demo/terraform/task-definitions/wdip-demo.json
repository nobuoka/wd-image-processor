[
  {
    "name": "wdip-demo-app",
    "image": "quay.io/nobuoka/wdip-app-demo:latest",
    "portMappings": [
      {
        "containerPort": 8080
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "wdip-demo"
      }
    },
    "healthCheck": {
      "command": [ "CMD-SHELL", "curl -f 'http://localhost:8080/-/health/all' || exit 1" ],
      "interval": 30,
      "retries": 8,
      "startPeriod": 60,
      "timeout": 20
    }
  },
  {
    "name": "wdip-demo-wd",
    "image": "quay.io/wakaba/firefoxdriver:stable",
    "portMappings": [
      {
        "containerPort": 9516
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "wdip-demo"
      }
    },
    "healthCheck": {
      "command": [ "CMD-SHELL", "curl -f 'http://localhost:8080/-/health/wd?url=http://127.0.0.1:9516' || exit 1" ],
      "interval": 30,
      "retries": 4,
      "startPeriod": 30,
      "timeout": 20
    }
  }
]
